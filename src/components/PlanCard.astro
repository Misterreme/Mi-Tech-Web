---
const { title, subtitle, price, mbps } = Astro.props;
---
<div class="bg-secondary px-5 py-10 flex flex-col gap-5 rounded-lg shadow-lg shadow-primary/10 hover:-translate-y-1.5 cursor-pointer transition-all border border-gray-200">
    <div class="flex flex-col w-full items-center justify-center gap-2">
        <h2 class="text-2xl font-bold text-center">{ title }</h2>
        <p class="text-light text-muted-foreground text-center">{ subtitle }</p>
    </div>
    <div class="w-full flex flex-col items-center justify-center gap-5">
        <h2 class="text-5xl font-extrabold text-primary text-center">{ price }</h2>
        <span class="text-muted-foreground">/mes</span>

        <div class="bg-gray-200 py-3 w-full text-center rounded-full text-primary font-bold"> { mbps } Mbps</div>
    </div>
    <ul class="text-muted-foreground font-medium flex flex-col justify-center items-start mt-5 gap-3">
        <li class="flex gap-3 text-sm">           
            <svg class="w-5 h-5 fill-primary cursor-pointer group-hover:fill-white">
                <use xlink:href="/assets/sprite.svg#icon-check-circle" id="menu-icon"></use>
            </svg>
            <span>Velocidad de descarga: { mbps } Mbps</span>
        </li>
        <li class="flex gap-3 text-sm">           
            <svg class="w-5 h-5 fill-primary cursor-pointer group-hover:fill-white">
                <use xlink:href="/assets/sprite.svg#icon-check-circle" id="menu-icon"></use>
            </svg>
            <span>Velocidad de carga: { mbps } Mbps</span>
        </li>
        <li class="flex gap-3 text-sm">           
            <svg class="w-5 h-5 fill-primary cursor-pointer group-hover:fill-white">
                <use xlink:href="/assets/sprite.svg#icon-check-circle" id="menu-icon"></use>
            </svg>
            <span>Conexi√≥n estable</span>
        </li>
        <li class="flex gap-3 text-sm">           
            <svg class="w-5 h-5 fill-primary cursor-pointer group-hover:fill-white">
                <use xlink:href="/assets/sprite.svg#icon-check-circle" id="menu-icon"></use>
            </svg>
            <span>Equipos incluidos</span>
        </li>
    </ul>
</div>
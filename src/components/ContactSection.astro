---
import ContactCard from "./ContactCard.astro";
---

<section id="contact-section" class="w-full min-h-screen pt-[10dvh] pb-[10dvh] bg-secondary">
    <div class="flex flex-col p-5 gap-5 items-center justify-center">
        <div class="w-full flex flex-col gap-10 items-center justify-center">
            <h2 class="text-foreground text-4xl text-center font-extrabold">Contáctanos</h2>
            <div class="flex flex-col gap-5 items-center justify-center">
                <h3 class="text-green-400 text-2xl text-center font-bold">Envíanos un mensaje vía WhatsApp</h3>
                <a aria-label="Chat on WhatsApp" href="https://wa.me/18095858145" class="flex items-center justify-center gap-3 bg-green-500 w-[200px] py-3 rounded-lg hover:scale-105 active:scale-105 transition-all">
                    <span class="text-white font-bold text-lg">Enviar mensaje</span>
                    <svg class="w-4 h-4 cursor-pointer group-hover:fill-white">
                        <use xlink:href="/assets/sprite.svg#icon-send" id="menu-icon"></use>
                    </svg>
                </a>
            </div>
        </div>
        <div class="flex w-52 items-center justify-center gap-3">
            <hr class="w-full h-0.5 bg-muted-foreground/30 border-none"><span class="text-muted-foreground/30">O</span><hr class="w-full h-0.5 bg-muted-foreground/30 border-none">
        </div>
        <div class="flex flex-col w-full items-center justify-center gap-5">
            <ContactCard title='Correo' subtitle="info@mitech.com.do" icon="email" iconFill="fill-green-500" />
            <ContactCard title="Teléfono" subtitle="+1 (809)-585-8145" icon="telephone" iconFill="fill-sky-600" />
            <ContactCard title="Dirección" subtitle="Calle Los Pinos 24, Boca De Mao" icon="geo-alt-fill" iconFill="fill-red-500" />
            <ContactCard title="Horario" subtitle="De 9 AM a 1PM y de 3PM a 7PM" icon="clock" iconFill="fill-orange-300" />
        </div>
        <div class="flex w-full items-center justify-center rounded-xl overflow-hidden">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d834.6406437767728!2d-71.04858434985336!3d19.59058955804846!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8eb1a3b9c120269f%3A0xcdf012fe96eb6a6d!2zU2VydmljaW9zIE7DusOxZXo!5e1!3m2!1ses-419!2sdo!4v1760385829649!5m2!1ses-419!2sdo" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="rounded-xl"></iframe>
        </div>
    </div>
</section>